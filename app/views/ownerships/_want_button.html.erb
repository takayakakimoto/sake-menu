<% if current_user.want?(sake) %>
  <%= form_tag(ownership_path(sake.id), method: :delete) do %>
    <%= hidden_field_tag :sake_id, sake.id %>
    <%= hidden_field_tag :type, 'Want' %>
    <%= submit_tag 'Unwant', class: 'btn btn-success btn-xs' %>
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :sake_name, sake.name %>
    <%= hidden_field_tag :type, 'Want' %>
    <%= submit_tag 'Want it', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>