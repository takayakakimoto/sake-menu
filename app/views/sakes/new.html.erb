<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_sake_path, method: :get, class: 'form-inline') do %>
      <div class="form-gruup">
        <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "酒名(漢字、ひらがな)を入力", size: 40 %>
      </div>
      <%= submit_tag '酒を検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'sakes', sakes: @sakes %>

